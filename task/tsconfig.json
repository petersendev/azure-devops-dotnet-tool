{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "./dist",
    "preserveConstEnums": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true
  },
  "include": [
    "src/**/*.ts",
    "custom_typings/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*-spec.ts"
  ]
}